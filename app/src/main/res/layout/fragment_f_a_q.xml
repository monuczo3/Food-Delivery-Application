<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FAQFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q1. Who is Three Meals Delivery Partner?"
                android:textSize="16sp"/>
            <TextView
                android:padding="5dp"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Three Meals delivery parteners are independent contractors, who are required to pick up food items ordered by customers from restaurants and deliver to customers."

                android:textSize="16sp"/>
            <TextView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q2. Can i edit my order?"
                android:textSize="16sp"/>
            <TextView
                android:padding="5dp"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your order can be edited before it reaches the restaurant. You could contact custormer support team via chat and call."

                android:textSize="16sp"/>
            <TextView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q3. I want to cancel my order"
                android:textSize="16sp"/>
            <TextView
                android:padding="5dp"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We will do our best to accomodate your request if the order is not placed to the restaurant."

                android:textSize="16sp"/>
            <TextView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q4. How long do you take to deliver?"
                android:textSize="16sp"/>
            <TextView
                android:padding="5dp"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Standare delivery times vary by the location selected and prevalling conditions. Once you select your location, an estimated delivery time is mentioned for each restaurant."

                android:textSize="16sp"/>
            <TextView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q5. Did not receiver OTP?"
                android:textSize="16sp"/>
            <TextView
                android:padding="5dp"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please check if your app is dut for an update. If not, please share the details via support@threeemeals.in"
                android:textSize="16sp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>