<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegistrationPage">

    <TextView
        android:id="@+id/txt_signup2"
        android:text="Sign Up"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textColor="@color/primaryfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_addyourdetails2"
        android:text="Add your detais to Sign up"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txt_signup2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/secondaryfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_name"
        android:background="@drawable/round_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_addyourdetails2"
        android:layout_marginTop="20dp"
        android:hint="Name"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/et_email"
        android:background="@drawable/round_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="15dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/et_phoneno"
        android:background="@drawable/round_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="15dp"
        android:hint="Mobile No"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_phoneno"
        android:drawablePadding="10dp"
        android:inputType="phone"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/et_address"
        android:background="@drawable/round_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_phoneno"
        android:layout_marginTop="15dp"
        android:hint="Address"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_address"
        android:drawablePadding="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/et_password"
        android:background="@drawable/round_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_address"
        android:layout_marginTop="15dp"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/et_confirmpassword"
        android:background="@drawable/round_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="15dp"
        android:hint="Confirm Password"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_confirm_password"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/btn_signup"
        android:background="@drawable/round_text"
        android:layout_below="@id/et_confirmpassword"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="Sign up"
        android:textStyle="bold"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_AlreadyhaveanAccount"
        android:text="Already have an Account?"
        android:layout_below="@id/btn_signup"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_login2"
        android:text="Log In"
        android:layout_below="@id/btn_signup"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_AlreadyhaveanAccount"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>