<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".forgotPassword">

    <TextView
        android:id="@+id/txt_resetpassword"
        android:text="Reset Password"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="@color/primaryfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_plsenteremail"
        android:text="@string/plsenteremail"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_resetpassword"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="@color/secondaryfont"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/et_email3"
        android:background="@drawable/round_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_plsenteremail"
        android:layout_marginTop="50dp"
        android:hint="Email"
        android:paddingStart="10dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/btn_send"
        android:background="@drawable/round_text"
        android:layout_below="@id/et_email3"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Send"
        android:textStyle="bold"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>