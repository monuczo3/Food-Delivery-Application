<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="56dp"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_gravity="bottom"
            android:id="@+id/img_person_myprofile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/default_person_icon" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
             <TextView
                 android:layout_marginBottom="10dp"
                 android:background="@drawable/round_grey"
                 android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                 android:textAlignment="center"
                 android:layout_height="wrap_content"
                android:text="name"
                 android:textSize="20sp"
                android:id="@+id/txt_person_name"/>
            <TextView
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_grey"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_person_name"
                android:layout_centerHorizontal="true"
                android:text="xxxxxx"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:id="@+id/txt_person_phone"
                android:textAlignment="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_grey"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_person_phone"
                android:layout_centerHorizontal="true"
                android:text="xyz@gmail"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:id="@+id/txt_person_email"
                android:textAlignment="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="10dp"

                android:background="@drawable/round_grey"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_person_email"
                android:layout_centerHorizontal="true"
                android:text="Address"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:id="@+id/txt_person_address"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>