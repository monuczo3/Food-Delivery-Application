<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restaurant_Menu">
   <androidx.appcompat.widget.Toolbar
       android:id="@+id/toolbar_resaurant_menu"
       android:minHeight="?attr/actionBarSize"
       android:fitsSystemWindows="true"
       app:titleTextColor="@color/white"
       android:background="@color/orange"
       android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/linearlayout_restaurant_menu"
        android:layout_below="@+id/toolbar_resaurant_menu"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="Choose from menu listed below:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <ImageButton
                android:src="@drawable/ic_hearts"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>


    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollview_restaurant_menu"
        android:layout_below="@id/linearlayout_restaurant_menu"
        android:layout_above="@+id/btn_proceed_to_cart2"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylclerview_restaurant_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_proceed_to_cart2"
        android:layout_alignParentBottom="true"
        android:text="Place order"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/round_text"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

</RelativeLayout>